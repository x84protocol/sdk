{
  "name": "@x84-ai/sdk",
  "version": "0.1.2",
  "description": "TypeScript SDK for the x84 Solana protocol â€” AI agent identity, reputation, delegation, and payment settlement",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./settlement": {
      "types": "./dist/settlement.d.ts",
      "import": "./dist/settlement.js",
      "require": "./dist/settlement.cjs"
    },
    "./api": {
      "types": "./dist/api.d.ts",
      "import": "./dist/api.js",
      "require": "./dist/api.cjs"
    },
    "./idl": {
      "types": "./src/idl/x84.ts",
      "default": "./src/idl/x84.json"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "tsc --noEmit",
    "sync-idl": "bash scripts/sync-idl.sh",
    "sync-deployment": "bash scripts/sync-deployment.sh"
  },
  "dependencies": {
    "@noble/hashes": "^1.4.0"
  },
  "peerDependencies": {
    "@coral-xyz/anchor": ">=0.31.0",
    "@solana/spl-token": ">=0.4.9",
    "@solana/web3.js": "^1.98.0"
  },
  "devDependencies": {
    "@coral-xyz/anchor": "^0.31.0",
    "@solana/spl-token": "^0.4.9",
    "@solana/web3.js": "^1.98.0",
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^1.6.0"
  }
}
